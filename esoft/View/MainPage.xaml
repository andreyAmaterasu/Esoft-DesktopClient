<Page Background="White" x:Class="esoft.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:esoft.View"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Login}" />
        <TextBlock Grid.Row="1" Text="{Binding Pass}" />
        <Frame Grid.Row="2" Content="{Binding CurrentPage}" x:Name="ContainerForPages" x:FieldModifier="public" NavigationUIVisibility = "Hidden" />
    </Grid>
</Page>
